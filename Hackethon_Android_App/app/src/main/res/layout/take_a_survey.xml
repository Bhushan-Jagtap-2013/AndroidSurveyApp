<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sample.hackethon_android_app.Take_A_Survey"
    android:weightSum="1">


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/create_survey_title"
        android:background="#fbfefd"
        android:textColor="#060505"
        android:width="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/create_survey_question"
        android:layout_marginTop="65dp"
        android:height="50dp"
        android:textColor="#040404"
        android:layout_below="@+id/create_survey_title"
        android:layout_alignLeft="@+id/create_survey_title"
        android:layout_alignStart="@+id/create_survey_title"
        android:layout_alignRight="@+id/create_survey_title"
        android:layout_alignEnd="@+id/create_survey_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rating"
        android:id="@+id/textView5"
        android:textColor="#050505"
        android:layout_below="@+id/create_survey_question"
        android:layout_alignLeft="@+id/create_survey_question"
        android:layout_alignStart="@+id/create_survey_question" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:id="@+id/create_survey_like"
        android:textColor="#050505"
        android:width="80dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:checked="false" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_survey_ratingbar"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignRight="@+id/create_survey_comment"
        android:layout_alignEnd="@+id/create_survey_comment" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Dislike"
        android:id="@+id/create_survey_dislike"
        android:width="80dp"
        android:textColor="#030303"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/create_survey_submit_button"
        android:layout_toEndOf="@+id/create_survey_submit_button"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/button_background"
        android:id="@+id/create_survey_submit_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/create_survey_ratingbar"
        android:layout_alignStart="@+id/create_survey_ratingbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment"
        android:id="@+id/textView6"
        android:textColor="#020202"
        android:layout_above="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/create_survey_comment"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/create_survey_tags"
        android:layout_alignStart="@+id/create_survey_tags" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tag"
        android:id="@+id/textView7"
        android:textColor="#030303"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/create_survey_submit_button"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/create_survey_tags"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/create_survey_like"
        android:layout_toEndOf="@+id/create_survey_like" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/create_survey_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"></LinearLayout>

</RelativeLayout>

