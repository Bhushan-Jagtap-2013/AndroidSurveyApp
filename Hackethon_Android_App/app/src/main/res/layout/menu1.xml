<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sample.hackethon_android_app.Menu"
    android:weightSum="1">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create A Survey"
        android:id="@+id/create"
        android:background="@drawable/button_background"
        android:height="70dp"
        android:width="180dp"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take A Survey"
        android:id="@+id/take"
        android:layout_below="@+id/create"
        android:layout_alignLeft="@+id/create"
        android:layout_alignStart="@+id/create"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/create"
        android:background="@drawable/button_background"
        android:layout_alignEnd="@+id/create"
        android:width="180dp"
        android:height="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search"
        android:layout_below="@+id/take"
        android:layout_alignLeft="@+id/take"
        android:layout_alignStart="@+id/take"
        android:background="@drawable/button_background"
        android:layout_marginTop="37dp"
        android:height="70dp"
        android:width="180dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:id="@+id/report"
        android:layout_below="@+id/search"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:background="@drawable/button_background"
        android:layout_marginTop="34dp"
        android:width="180dp"
        android:height="70dp" />

</RelativeLayout>

